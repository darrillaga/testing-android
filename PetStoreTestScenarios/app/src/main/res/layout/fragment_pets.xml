<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Base.ContainerWithoutPadding">

    <FrameLayout
        android:id="@+id/errors_container"
        android:layout_alignParentTop="true"
        style="@style/Base.Wrapper.FullWidth"/>

    <com.mooveit.ui.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_below="@id/errors_container"
        style="@style/Base.ContainerWithoutPadding">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/pets_recycler"
            style="@style/Base.Container.SmallPadding"
            android:clipToPadding="false"/>

    </com.mooveit.ui.SwipeRefreshLayout>

</RelativeLayout>
